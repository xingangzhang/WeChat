

.page-body {
  width: 750rpx;
  height: 100%;
  flex-direction: column;
  display: flex;
  background: green;
  color: white;
}

.page-title {
  flex-direction: row;
  display: flex;
}

.img-head {
  padding: 5rpx;
  border: 0 solid #fff;
  border-radius: 200rpx;
  margin: 15rpx;
  width: 150rpx;
  height: 150rpx;
  background: white;
}

.page-title-view {
  display: flex;
  flex-direction: column;
}

.page-title-item {
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 36rpx;
}

.page-section-item {
  margin-left: 15rpx;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}

.page-section-item-detail {
  margin: 15rpx;
  margin-top: 30rpx;
  font-size: 38rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
}

page-section-detail-txt {
  margin-bottom: 15rpx;
}

.page-section-item-count {
  text-align: right;
  margin-bottom: 15rpx;
}

.page-section-item-count-txt {
  font-size: 38rpx;
}

.page-section-item-user {
  align-items: center;
  margin: 15rpx;
  text-align: center;
}

.page-section-item-user-item{
  width: 100%;
  height: 100%;
}
.page-section-item-user-img {
  padding: 5rpx;
  border: 0 solid #fff;
  border-radius: 200rpx;
  margin: 5rpx;
  width: 80rpx;
  height: 80rpx;
  background: white;
}
