<!--pages/startup/startup.wxml-->
<view class="container">
  <view class="page">
    <view class="page-body">
      <view class="page-title">
        <view class="page-title-img">
          <image class="img-head" src="{{title_image}}" />
        </view>
        <view class="page-title-txt">
          <text class="page-title-name">{{name}}</text>
          <text class="page-title-points">{{points}}积分</text>
        </view>
        <!-- <view class="page-title-btn">
          <button class="btn-mine" type="primary">{{mine}}</button>
        </view> -->
      </view>
      <view class="page-tab">
        
        <view class="page-tab-swiper">
          <swiper current="{{currentTab}}" duration="300" bindchange="bindSwiperChange">
            <swiper-item>
              <view>第一屏</view>
            </swiper-item>
            <swiper-item>
              <view>第二屏</view>
            </swiper-item>
            <swiper-item>
              <view>第三屏</view>
            </swiper-item>
          </swiper>
        </view>
        <view class="page-tab-title">
          <view class="swiper-tab-item {{currentTab==0?'on':''}}" data-current="0" bindtap="swichNav">报名中的圆桌</view>
          <view class="swiper-tab-item {{currentTab==1?'on':''}}" data-current="1" bindtap="swichNav">进行中的圆桌</view>
          <view class="swiper-tab-item {{currentTab==2?'on':''}}" data-current="2" bindtap="swichNav">我的圆桌</view>
        </view>
      </view>
    </view>
  </view>
</view>